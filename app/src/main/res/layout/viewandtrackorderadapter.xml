<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10sp"
    android:elevation="8dp"
    card_view:cardCornerRadius="8dp">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_centerVertical="true"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#GCHER"/>
    <TextView
        android:id="@+id/create_date"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"

        android:layout_height="wrap_content"
        android:text="01-Nov-2017"/>
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="Packing"/>
</LinearLayout>
        <TextView
            android:id="@+id/track"
            android:layout_alignParentRight="true"
android:visibility="invisible"
            android:layout_width="wrap_content"
            android:text="track"
            android:textColor="@color/gray_color"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:layout_toLeftOf="@+id/track"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/line1"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Items"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Rs 235"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/line1"                                    android:layout_height="25dp" />
    </RelativeLayout>


</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rel1"
        android:layout_height="wrap_content">
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/gray_color"
            ></View>
    <LinearLayout
        android:id="@+id/rel2"
        android:gravity="center"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/circle1"
            android:layout_width="15dp"
            android:src="@drawable/graycircle"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="15dp" />

        <ImageView
            android:id="@+id/circle2"
            android:layout_width="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/graycircle"
            android:layout_centerInParent="true"
            android:layout_height="15dp" />
        <ImageView
            android:id="@+id/circle3"
            android:gravity="center"
            android:layout_width="15dp"
            android:layout_weight="1"
            android:src="@drawable/graycircle"
            android:layout_alignParentRight="true"

            android:layout_height="15dp" />

        <ImageView
            android:id="@+id/circle4"
            android:layout_width="15dp"
            android:layout_weight="1"
            android:gravity="center"

            android:src="@drawable/graycircle"
            android:layout_alignParentRight="true"

            android:layout_height="15dp" />

    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rel1"
android:id="@+id/rel3"
        android:weightSum="4"
        android:gravity="center"

        android:paddingRight="5dp"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Order Placed"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Out For Collection"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Submited"/>
        <TextView
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="Completed"/>
    </LinearLayout>
    <TextView
        android:id="@+id/otp"
        android:layout_below="@+id/rel3"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="Completed"/>

</RelativeLayout>
    </android.support.v7.widget.CardView>