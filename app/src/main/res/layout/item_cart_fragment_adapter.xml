<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:elevation="5dp"
        card_view:cardCornerRadius="@dimen/margin_5">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/padding_default"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rel2"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
        <com.infoicon.powercoin.customView.CustomTextView
            android:layout_alignParentLeft="true"
            android:id="@+id/txt_testName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:singleLine="false"
            android:layout_toLeftOf="@+id/text_date"
            android:text="Blood sugar!"
            android:textSize="@dimen/text_size_regular"
            />
        <com.infoicon.powercoin.customView.CustomTextView
            android:id="@+id/lab_name"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_regular"
            android:textColor="@color/deep_yellow"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Matro hospital Lab"
            />
            <com.infoicon.powercoin.customView.CustomTextView
                android:id="@+id/lab_ads"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                />
            <com.infoicon.powercoin.customView.CustomTextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_small"
                android:id="@+id/date_time"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="12/10/2018 08:20"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <com.infoicon.powercoin.customView.CustomButton
                android:id="@+id/delete"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:singleLine="false"
                android:background="@drawable/ic_delete_black_24dp"
                android:layout_toLeftOf="@+id/text_date"
                />

        <com.infoicon.powercoin.customView.CustomButton
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_30"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_notifications_black_24dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>
</layout>